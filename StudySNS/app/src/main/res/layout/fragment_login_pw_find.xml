<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <Button
        android:id="@+id/pwFindButton"
        android:layout_width="356dp"
        android:layout_height="45dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/round_corner2"
        android:text="찾기"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/emailEditText"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/FindID_Title"
        android:layout_width="273dp"
        android:layout_height="55dp"
        android:gravity="center_horizontal"
        android:text="비밀번호 찾기"
        android:textColor="#000000"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.099" />

    <TextView
        android:id="@+id/FindID_PasswordText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="비밀번호 찾기"
        android:textColor="#577041"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pwFindButton"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/FindID_RegisterText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="회원가입"
        android:textColor="#577041"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/FindID_PasswordText"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/FindID_Name"
        android:layout_width="325dp"
        android:layout_height="42dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/round_corner"
        android:hint=" 이름"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/FindID_Title"
        app:layout_constraintVertical_bias="0.09" />

    <EditText
        android:id="@+id/FindID_Password"
        android:layout_width="325dp"
        android:layout_height="42dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/round_corner"
        android:hint="아이디"
        android:textColor="#8FC95C"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/FindID_Name"
        app:layout_constraintVertical_bias="0.004" />

    <EditText
        android:id="@+id/emailEditText"
        android:layout_width="325dp"
        android:layout_height="42dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/round_corner"
        android:hint="이메일"
        android:textColor="#8FC95C"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/FindID_Password"
        app:layout_constraintVertical_bias="0.002" />

    <TextView
        android:layout_width="32dp"
        android:layout_height="44dp"
        android:layout_marginEnd="12dp"
        android:gravity="center_horizontal"
        android:text="x"
        android:textSize="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>